<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@drawable/road">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One-Trip"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round-Trip"
            android:textAllCaps="false"
            android:id="@+id/roundTrip"
            android:background="@color/transparent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Person's first name"
            android:drawableStart="@drawable/ic_user"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:textSize="14sp"
            android:inputType="text"/>

        <EditText
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_people"
            android:ems="10"
            android:hint="Last name"
            android:background="@drawable/custom_input"
            android:textSize="14sp"
            android:inputType="text"
            android:drawablePadding="12dp"/>
    </LinearLayout>

    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Location"
        android:drawableStart="@drawable/ic_location_bus"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:textSize="14sp"/>

    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_destination"
        android:ems="10"
        android:hint="Destination"
        android:background="@drawable/custom_input"
        android:textSize="14sp"
        android:drawablePadding="12dp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/some_one_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/some_one_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerPerson"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Person's Phone number"
        android:inputType="number"
        android:drawableStart="@drawable/ic_phone"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:textSize="14sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/button_background2"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="20dp" />

</LinearLayout>