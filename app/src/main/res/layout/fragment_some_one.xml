<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One-way Trip"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round-Trip"
            android:textAllCaps="false"
            android:id="@+id/roundTrip"
            android:background="@color/transparent"
            android:layout_weight="1"/>

    </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Person's first name"
            android:drawableStart="@drawable/ic_user"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:textSize="14sp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_people"
            android:ems="10"
            android:hint="Last name"
            android:background="@drawable/custom_input"
            android:textSize="14sp"
            android:inputType="text"
            android:drawablePadding="12dp"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />
        <Spinner
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_location_bus"
            android:drawablePadding="12dp"
            android:textSize="14sp"/>



     <TextView
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />
        <Spinner
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_location_bus"
            android:drawablePadding="12dp"
            android:textSize="14sp"/>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Departure date"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/some_one_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/some_one_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerPerson"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Person's Phone number"
        android:inputType="number"
        android:drawableStart="@drawable/ic_phone"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:textSize="14sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_background2"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="20dp" />

</LinearLayout>
</ScrollView>